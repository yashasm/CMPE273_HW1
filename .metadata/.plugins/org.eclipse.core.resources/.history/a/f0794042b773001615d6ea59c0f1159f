<script>
'use strict';
var cardFormDetailsMain = document.getElementById("cardForm");

document.getElementById("appForm").disabled = true;
var availableAmount = cardFormDetails[1].value;

function buyItem(){
	var appFormDetails = document.getElementById("appForm");
	var itemSelected = appFormDetails[0].value;
	var itemCount = appFormDetails[1].value;
	if(itemCount <= 0){
		alert('Invalid Item count');
	}
	
	var originalAmount = availableAmount;
	//var error = false;
	switch(itemSelected){
	case "coins":
		availableAmount = availableAmount - (itemCount * 1);
		
		break;
	case "lure":
		availableAmount = availableAmount - (itemCount * 2);		
		break;
	case "balls":
		availableAmount = availableAmount - (itemCount * 1);		
		break;
	case "incense":
		availableAmount = availableAmount - (itemCount * 5);		
		break;
	case "lucky":
		availableAmount = availableAmount - (itemCount * 25);		
		break;
	case "egg":
		availableAmount = availableAmount - (itemCount * 10);		
		break;	
	}
	
	if(availableAmount < 0){
		availableAmount = originalAmount;
		alert('You do not have sufficient funds');
		//return;
	}
	alert('Available amount : '+availableAmount);
	var cardFormDetailsUpdate = document.getElementById("cardForm");
	cardFormDetailsUpdate[1].value = availableAmount;
	//alert('item is:'+itemSelected+' Item count:'+itemCount );
}

function validate(){
	var cardFormDetails = document.getElementById("cardForm");
	var cardNumber = cardFormDetails[0].value;
	var password = cardFormDetails[1].value;
	
	if(cardNumber.length != 16){
		alert("Card number should be 16 in length");
	}
	else if(password.length == 0){
		alert("password can not be blank");
	}
	else{
		//cardFormDetails[1].value = 1;
		document.getElementById("cardForm").disabled = true;
		document.getElementById("appForm").disabled = false;
	}
}



</script>
